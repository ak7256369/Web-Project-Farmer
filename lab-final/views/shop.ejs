<div class="container py-5">
    <% if (query.added) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            Product added successfully!
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% } %>
            <div class="row">
                <!-- Filters Sidebar -->
                <div class="col-md-3">
                    <h4>Filter by</h4>
                    <form action="/products" method="GET">
                        <div class="mb-3">
                            <label class="form-label">Category</label>
                            <select name="category" class="form-select">
                                <option value="">All Categories</option>
                                <% categories.forEach(cat=> { %>
                                    <option value="<%= cat %>" <%=query.category===cat ? 'selected' : '' %>><%= cat %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Min Price</label>
                            <input type="number" name="minPrice" class="form-control" value="<%= query.minPrice %>">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Max Price</label>
                            <input type="number" name="maxPrice" class="form-control" value="<%= query.maxPrice %>">
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Apply Filters</button>
                    </form>
                </div>

                <!-- Product Grid -->
                <div class="col-md-9">
                    <div class="row g-4">
                        <% if (products.length> 0) { %>
                            <% products.forEach(product=> { %>
                                <div class="col-md-4">
                                    <div class="card h-100 shadow-sm border-0">
                                        <img src="<%= product.image || 'https://via.placeholder.com/300' %>"
                                            class="card-img-top" alt="<%= product.name %>"
                                            style="height: 200px; object-fit: cover;">
                                        <div class="card-body d-flex flex-column">
                                            <h5 class="card-title">
                                                <%= product.name %>
                                            </h5>
                                            <p class="card-text text-truncate">
                                                <%= product.description %>
                                            </p>
                                            <div class="mt-auto">
                                                <h5 class="text-success mb-2">$<%= product.price %>
                                                </h5>
                                                <form action="/cart/add/<%= product._id %>" method="POST">
                                                    <button type="submit" class="btn btn-outline-success w-100">Add to
                                                        Cart</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                                    <% } else { %>
                                        <div class="col-12">
                                            <p>No products found.</p>
                                        </div>
                                        <% } %>
                    </div>
                </div>

                <!-- Pagination -->
                <% if (totalPages> 1) { %>
                    <nav class="mt-4">
                        <ul class="pagination justify-content-center">
                            <% for(let i=1; i <=totalPages; i++) { %>
                                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                    <a class="page-link"
                                        href="/products?page=<%= i %>&category=<%= query.category || '' %>&minPrice=<%= query.minPrice || '' %>&maxPrice=<%= query.maxPrice || '' %>">
                                        <%= i %>
                                    </a>
                                </li>
                                <% } %>
                        </ul>
                    </nav>
                    <% } %>
            </div>
</div>
</div>