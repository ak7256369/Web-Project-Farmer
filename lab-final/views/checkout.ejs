<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="mb-4 text-center">Checkout</h2>

      <!-- Order Summary Card -->
      <div class="card mb-4 shadow-sm">
        <div class="card-header bg-light d-flex justify-content-between align-items-center" style="cursor: pointer;"
          data-bs-toggle="collapse" data-bs-target="#orderSummary" aria-expanded="false">
          <span class="fw-bold">Order Summary <small class="text-muted">(<%= cart.length %> items)</small></span>
          <span class="fw-bold text-primary">$<%= total %></span>
        </div>
        <div class="collapse" id="orderSummary">
          <ul class="list-group list-group-flush">
            <% cart.forEach(item=> { %>
              <li class="list-group-item d-flex justify-content-between align-items-center py-2">
                <div style="font-size: 0.9rem;">
                  <span class="fw-medium">
                    <%= item.name %>
                  </span>
                </div>
                <span class="text-muted" style="font-size: 0.9rem;">$<%= item.price %></span>
              </li>
              <% }) %>
                <li class="list-group-item d-flex justify-content-between py-2 bg-light">
                  <strong>Total</strong>
                  <strong>$<%= total %></strong>
                </li>
          </ul>
        </div>
      </div>

      <!-- Billing Details Form -->
      <div class="card shadow-sm">
        <div class="card-body">
          <h4 class="card-title mb-3">Billing Details</h4>
          <form action="/cart/checkout" method="POST">
            <div class="mb-3">
              <label for="customerName" class="form-label">Full Name</label>
              <input type="text" class="form-control" id="customerName" name="customerName" placeholder="John Doe"
                required>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email Address</label>
              <input type="email" class="form-control" id="email" name="email" placeholder="john@example.com" required>
            </div>
            <hr class="my-4">
            <button type="submit" class="btn btn-primary w-100 btn-lg">Place Order</button>
          </form>
        </div>
      </div>

    </div>
  </div>
</div>

<!-- Add Bootstrap JS for collapse functionality if not already present in layout -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>