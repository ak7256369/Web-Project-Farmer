<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Products</h1>
    <a href="/admin/products/add" class="btn btn-success">Add New Product</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% if (products.length> 0) { %>
            <% products.forEach(product=> { %>
                <tr>
                    <td><img src="<%= product.image || 'https://via.placeholder.com/50' %>" alt="<%= product.name %>"
                            width="50"></td>
                    <td>
                        <%= product.name %>
                    </td>
                    <td>
                        <%= product.category %>
                    </td>
                    <td>$<%= product.price %>
                    </td>
                    <td>
                        <a href="/admin/products/edit/<%= product._id %>" class="btn btn-sm btn-primary">Edit</a>
                        <a href="/admin/products/delete/<%= product._id %>" class="btn btn-sm btn-danger"
                            onclick="return confirm('Are you sure?')">Delete</a>
                    </td>
                </tr>
                <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="5" class="text-center">No products found.</td>
                        </tr>
                        <% } %>
    </tbody>
</table>