<div class="container py-5">
    <h1 class="mb-4">Shopping Cart</h1>
    <% if (cart.length> 0) { %>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% cart.forEach((item, index)=> { %>
                        <tr>
                            <td>
                                <% if(item.image) { %>
                                    <img src="<%= item.image %>" style="width: 50px; margin-right: 10px;">
                                    <% } %>
                                        <%= item.name %>
                            </td>
                            <td>$<%= item.price %>
                            </td>
                            <td><a href="/cart/remove/<%= index %>" class="btn btn-sm btn-danger">Remove</a></td>
                        </tr>
                        <% }) %>
                            <tr>
                                <td class="text-end fw-bold">Total:</td>
                                <td colspan="2">$<%= total %>
                                </td>
                            </tr>
                </tbody>
            </table>
        </div>
        <div class="d-flex justify-content-end">
            <a href="/products" class="btn btn-secondary me-2">Continue Shopping</a>
            <a href="/cart/checkout" class="btn btn-success">Proceed to Checkout</a>
        </div>
        <% } else { %>
            <div class="alert alert-info">Your cart is empty. <a href="/products">Go shopping!</a></div>
            <% } %>
</div>